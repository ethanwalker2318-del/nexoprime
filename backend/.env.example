# ─── Database ────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://user:password@localhost:5432/nexo_db?schema=public"

# ─── Telegram Bot ────────────────────────────────────────────────────────────
BOT_TOKEN="7000000000:AAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# SuperAdmin Telegram ID (BigInt)
SUPER_ADMIN_TG_ID="123456789"

# ─── Express ─────────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ─── Notification chats ──────────────────────────────────────────────────────
# Chat куда идут уведомления о новых KYC-заявках (можно = SUPER_ADMIN_TG_ID)
ADMIN_NOTIFY_CHAT_ID="123456789"

# ─── WebApp URL ──────────────────────────────────────────────────────────────
WEBAPP_URL="https://your-domain.com"

# ─── Security ────────────────────────────────────────────────────────────────
JWT_SECRET="change-me-in-production-32-chars-min"

# Rate limiting (overrides defaults)
RATE_LIMIT_IP_MAX=120
RATE_LIMIT_IP_WINDOW_MS=60000
RATE_LIMIT_TRADE_MAX=5
RATE_LIMIT_TRADE_WINDOW_MS=10000

# ─── Redis (optional, for caching / queues) ─────────────────────────────────
REDIS_URL="redis://localhost:6379"

# ─── Logging ─────────────────────────────────────────────────────────────────
LOG_LEVEL=info
